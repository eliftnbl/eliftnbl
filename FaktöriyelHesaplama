print("Programımız girecek olduğunuz sayı değerinin faktöriyelini hesaplamaktadır!")
def factoriyel(sayı):
    faktoriyel=1
    if sayı==0 or sayı==1:
        return 1
    for i in range(1,sayı+1):
        faktoriyel*=i
    return faktoriyel

number=int(input("Sayı değeri : "))
print("FAKTÖRİYEL DEĞERİNİZ : " , factoriyel(number))
